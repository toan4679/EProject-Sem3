@model OnlineAuctionSystem.Models.ForgotPasswordModel
@{
    Layout = "_LoginLayout";
    ViewData["Title"] = "Forgot Password";
}

<div class="login-1">
  <div class="container-fluid">
    <div class="row login-box">
      <div class="col-lg-6 align-self-center pad-0 form-section">
        <div class="form-inner">
          <h3>Recover Your Password</h3>
          @if (TempData["PasswordSent"] != null)
          {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
              <strong>Success,</strong> an email has been sent with reset instructions.
              <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
          }
          <form asp-action="ForgotPassword" method="post" id="forgotForm">
            <div class="form-group position-relative clearfix">
              <input asp-for="Email" class="form-control" placeholder="Email Address" />
              <span asp-validation-for="Email" class="text-danger"></span>
              <div class="login-popover login-popover-abs" data-bs-toggle="popover" title="Hint" data-bs-content="Enter your registered email.">
                <i class="fa fa-info-circle"></i>
              </div>
            </div>
            <div class="form-group clearfix">
              <button type="submit" class="btn btn-primary btn-lg btn-theme">Send Me Email</button>
            </div>
          </form>
          <div class="social-list clearfix mt-3">
            <div class="icon facebook"><div class="tooltip">Facebook</div><span><i class="fa fa-facebook"></i></span></div>
            <div class="icon twitter"><div class="tooltip">Twitter</div><span><i class="fa fa-twitter"></i></span></div>
            <div class="icon instagram"><div class="tooltip">Google</div><span><i class="fa fa-google"></i></span></div>
            <div class="icon github mr-0"><div class="tooltip">Linkedin</div><span><i class="fa fa-linkedin"></i></span></div>
          </div>
          <p class="mt-3">Already a member? <a asp-controller="Account" asp-action="Login">Login here</a></p>
        </div>
      </div>
      <div class="col-lg-6 pad-0 none-992 bg-img">
        <div class="lines">
          <div class="line"></div><div class="line"></div><div class="line"></div>
          <div class="line"></div><div class="line"></div><div class="line"></div>
        </div>
        <div class="info">
          <div class="animated-text">
            <h1>Welcome <span>to Artmart</span></h1>
          </div>
          <p>At Artmart, we are passionate art enthusiasts dedicated to connecting artists and collectors through dynamic and exciting auctions. Our platform celebrates the creativity and diversity of artists from around the world, providing a space where their works can be appreciated and acquired.</p>
        </div>
      </div>
    </div>
  </div>
</div>

@section Scripts {
  <partial name="_ValidationScriptsPartial" />
}
