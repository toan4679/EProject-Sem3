@model OnlineAuctionSystem.Models.LoginViewModel
@{
    Layout = "_LoginLayout";
    ViewData["Title"] = "Login";
}

<div class="login-1">
    <div class="container-fluid">
        <div class="row login-box">
            <div class="col-lg-6 align-self-center pad-0 form-section">
                <div class="form-inner">
                    <h3>Sign Into Your Account</h3>
                    @if (ViewData.ModelState.ErrorCount > 0)
                    {
                        <div class="alert alert-danger alert-dismissible fade show">
                            <strong>Sorry,</strong> Something went wrong!
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }
                    <form asp-action="Login" method="post" id="commonForm">
                        <div class="form-group position-relative clearfix">
                            <input asp-for="Email" class="form-control" placeholder="Email Address" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                            <div class="login-popover login-popover-abs" data-bs-toggle="popover" title="Clarification"
                                data-bs-content="Enter your registered email.">
                                <i class="fa fa-info-circle"></i>
                            </div>
                        </div>
                        <div class="form-group clearfix position-relative password-wrapper">
                            <input asp-for="Password" type="password" class="form-control" placeholder="Password"
                                autocomplete="off" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                            <i class="fa fa-eye password-indicator"></i>
                        </div>
                        <div class="checkbox form-group clearfix">
                            <div class="form-check float-start">
                                <input asp-for="RememberMe" class="form-check-input" />
                                <label asp-for="RememberMe" class="form-check-label">Remember me</label>
                            </div>
                            <a asp-action="ForgotPassword" class="link-light float-end forgot-password">
                                Forgot your password?
                            </a>
                        </div>
                        <div class="form-group clearfix">
                            <button type="submit" class="btn btn-primary btn-lg btn-theme">Login</button>
                        </div>
                    </form>
                    <div class="social-list clearfix mt-3">
                        <div class="icon facebook">
                            <div class="tooltip">Facebook</div>
                            <span><i class="fa fa-facebook"></i></span>
                        </div>
                        <div class="icon twitter">
                            <div class="tooltip">Twitter</div>
                            <span><i class="fa fa-twitter"></i></span>
                        </div>
                        <div class="icon instagram">
                            <div class="tooltip">Google</div>
                            <span><i class="fa fa-google"></i></span>
                        </div>
                        <div class="icon github mr-0">
                            <div class="tooltip">Linkedin</div>
                            <span><i class="fa fa-linkedin"></i></span>
                        </div>
                    </div>
                    <p class="mt-2">
                        Don't have an account? <a asp-action="Register" class="thembo">Register here</a>
                    </p>
                </div>
            </div>
            <div class="col-lg-6 pad-0 none-992 bg-img">
                <div class="lines">
                    <div class="line"></div>
                    <div class="line"></div>
                    <div class="line"></div>
                    <div class="line"></div>
                    <div class="line"></div>
                    <div class="line"></div>
                </div>
                <div class="info">
                    <div class="animated-text">
                        <h1>Welcome <span>to Artmart</span></h1>
                    </div>
                    <p>At Artmart, we are passionate art enthusiasts dedicated to connecting artists and collectors
                        through dynamic and exciting auctions. Our platform celebrates the creativity and diversity of
                        artists from around the world, providing a space where their works can be appreciated and
                        acquired.</p>
                </div>
            </div>
        </div>
    </div>
</div>
